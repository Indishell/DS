
Method 1: Merge 2 Sorted Arrays.

TC: O(m + n)
SC: O(m + n)

double getMedian(int A[], int B[], int m, int n)
{

	double C[m + n];

	int i = 0, j =  0;
	int index = 0;

	while (i < m && j < n)
	{

		if (A[i] < B[j])
			C[index++] = A[i++];

		else
			C[index++] = B[j++];
	}

	while (i < m)
		C[index++] = A[i++];

	while (j < n)
		C[index++] = B[j++];

	if (index & 1)
		return C[index / 2] / 2;

	else
		return double((C[index / 2]  + C[index / 2 - 1]) / 2);
}

