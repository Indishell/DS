
Method 1 : Brute Force

class Solution {
public:
  
    bool isAnagram(string a, string b)
    {

      sort(a.begin(), a.end());
      sort(b.begin(), b.end());

      if (a == b) return true;
      else return false;
    }
  
    vector<int> findAnagrams(string s, string p) 
    {
    
        vector<int> v;
        string res;
        int i = 0, j = 0;
      
        for (i  = 0; i <  s.size(); i++)
        {
          for (j = i; j < s.size(); j++)
          {
                res.push_back(s[j]);

                if (isAnagram(res,  p))
                {
                  v.push_back(i);
                  break;
                }
          }
          res.clear();
        }

        
      return v;
        
    }
};



