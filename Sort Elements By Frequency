#include<bits/stdc++.h>
using namespace std;


int getCount(int *check, int n)
{
    int count = 0;
    
    for(int i = 0; i<n;i++)
    {
        if(check[i] == check[i + 1])
            count++;
    }
    
    return count;
}


void sortElementsByFreq(int arr[], int n)
{
    vector<pair<int, int> > vp;
    
    
    for(int i =0; i < n; i++)
        vp.push_back(make_pair(getCount(arr[i], n), arr[i]) );
        
        
        
    sort(vp.begin(), vp.end(), getCount);
    
    
    
    for(int i = 0; i < vp.size(); i++)
        cout<<vp[i].second<<" ";
}


int main()
{
    int arr[] = {2, 5, 2, 8, 5, 6, 8, 8};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    
    sortElementsByFreq(arr, n);
    return 0;
    
}
